{
  "name": "roon-now-playing",
  "version": "1.3.0",
  "description": "Roon Now Playing Display - Real-time album artwork and track metadata for web clients",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -w run --parallel '/^dev:/'",
    "dev:server": "pnpm --filter @roon-screen-cover/server dev",
    "dev:client": "pnpm --filter @roon-screen-cover/client dev",
    "build": "pnpm run build:shared && pnpm run build:client && pnpm run build:server",
    "build:shared": "pnpm --filter @roon-screen-cover/shared build",
    "build:client": "pnpm --filter @roon-screen-cover/client build",
    "build:server": "pnpm --filter @roon-screen-cover/server build",
    "start": "pnpm --filter @roon-screen-cover/server start",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint packages --ext .ts,.vue"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "jsdom": "^27.4.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=20.0.0"
  }
}
